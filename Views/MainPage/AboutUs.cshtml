@{
    Layout = "_Main";
    ViewData["Title"] = Localizer["Title"];
}

<div class="container mt-4">
    <div class="jumbotron bg-light p-5 rounded-lg shadow-sm animate__animated animate__fadeIn">
        <h1 class="display-4">@Localizer["AcercaDe"]</h1>
        <p class="lead">@Localizer["FacilitandoGestion"]</p>
        <hr class="my-4">
        <p>@Localizer["ComprometidosTransformar"]</p>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 animate__animated animate__fadeInLeft">
            <h2 class="mb-3">@Localizer["NuestraMision"]</h2>
            <p>@Localizer["ProveerPlataformaIntegral"]</p>
        </div>
        <div class="col-md-6 animate__animated animate__fadeInRight">
            <h2 class="mb-3">@Localizer["NuestraVision"]</h2>
            <p>@Localizer["SerHerramientaLider"]</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100 animate__animated animate__zoomIn">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people-fill"></i> @Localizer["NuestroEquipo"]</h5>
                    <p class="card-text">@Localizer["EquipoDedicado"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100 animate__animated animate__zoomIn" style="animation-delay: 0.1s;">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-lightbulb"></i> @Localizer["Innovacion"]</h5>
                    <p class="card-text">@Localizer["EsforzamosVanguardia"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100 animate__animated animate__zoomIn" style="animation-delay: 0.2s;">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-hand-thumbs-up"></i> @Localizer["Compromiso"]</h5>
                    <p class="card-text">@Localizer["ComprometidosExcelencia"]</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12 animate__animated animate__fadeInUp">
            <h2 class="mb-3">@Localizer["ContactaConNosotros"]</h2>
            <p>@Localizer["PreguntasMasInformacion"]</p>
            <p><i class="bi bi-envelope"></i> @Localizer["Email"]: <a href="mailto:soporte@proyectofinaldam2324.site">soporte@proyectofinaldam2324.site</a></p>
            <p><i class="bi bi-telephone"></i> @Localizer["Telefono"]: +34 123 456 789</p>
        </div>
    </div>
</div>
