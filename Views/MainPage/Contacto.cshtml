@{
    Layout = "_Main";
    ViewData["Title"] = Localizer["Title"];
}

<div class="container mt-4">
    <div class="jumbotron bg-light p-5 rounded-lg shadow-sm animate__animated animate__fadeIn">
        <h1 class="display-4">@Localizer["Contacto"]</h1>
        <p class="lead">@Localizer["EstamosAquiParaAyudarte"]</p>
        <hr class="my-4">
        <p>@Localizer["UtilizaFormulario"]</p>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 animate__animated animate__fadeInLeft">
            <h2 class="mb-3">@Localizer["InformacionContacto"]</h2>
            <p>@Localizer["ConsultasGenerales"]</p>
            <ul class="list-unstyled">
                <li><i class="bi bi-envelope"></i> @Localizer["Email"]: <a href="mailto:soporte@proyectofinaldam2324.site">soporte@proyectofinaldam2324.site</a></li>
                <li><i class="bi bi-telephone"></i> @Localizer["Telefono"]: +34 123 456 789</li>
                <li><i class="bi bi-geo-alt"></i> @Localizer["Direccion"]: Calle Ejemplo 123, Madrid, España</li>
            </ul>
            <h2 class="mt-4 mb-3">@Localizer["RedesSociales"]</h2>
            <p>@Localizer["SeguirnosRedes"]</p>
            <ul class="list-unstyled">
                <li><i class="bi bi-facebook"></i> <a href="https://www.facebook.com/gestacentro" target="_blank">@Localizer["Facebook"]</a></li>
                <li><i class="bi bi-twitter"></i> <a href="https://www.twitter.com/gestacentro" target="_blank">@Localizer["Twitter"]</a></li>
                <li><i class="bi bi-linkedin"></i> <a href="https://www.linkedin.com/company/gestacentro" target="_blank">@Localizer["LinkedIn"]</a></li>
            </ul>
        </div>
        <div class="col-md-6 animate__animated animate__fadeInRight">
            <h2 class="mb-3">@Localizer["FormularioContacto"]</h2>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">@Localizer["Nombre"]</label>
                    <input type="text" class="form-control" id="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">@Localizer["Email"]</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">@Localizer["Asunto"]</label>
                    <input type="text" class="form-control" id="subject" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">@Localizer["Mensaje"]</label>
                    <textarea class="form-control" id="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary animate__animated animate__pulse"><i class="bi bi-send"></i> @Localizer["Enviar"]</button>
            </form>
        </div>
    </div>
</div>
