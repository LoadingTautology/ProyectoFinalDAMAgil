@model ProyectoFinalDAMAgil.Models.UsuarioCorreo
@{
    Layout = null;
    ViewData["Title"] = Localizer["Title"];
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Localizer["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 1rem;
        }

        .card-header {
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>@Localizer["Registrate"]</h4>
                    </div>
                    <div class="card-body">
                        <form id="registroForm" asp-controller="Login" asp-action="Registro" method="post" enctype="multipart/form-data" novalidate>
                            <div class="mb-3">
                                <label for="NombreUsuario" class="form-label">@Localizer["Nombre"]</label>
                                <input class="form-control" type="text" id="NombreUsuario" asp-for="NombreUsuario" placeholder="@Localizer["Nombre"]" required />
                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="ApellidosUsuario" class="form-label">@Localizer["Apellidos"]</label>
                                <input class="form-control" type="text" id="ApellidosUsuario" asp-for="ApellidosUsuario" placeholder="@Localizer["Apellidos"]" required />
                                <span asp-validation-for="ApellidosUsuario" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="DNI" class="form-label">@Localizer["DNI"]</label>
                                <input class="form-control" type="text" id="DNI" asp-for="DNI" placeholder="@Localizer["DNI"]" required />
                                <span asp-validation-for="DNI" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Correo" class="form-label">@Localizer["Correo"]</label>
                                <input class="form-control" type="email" id="Correo" asp-for="Correo" placeholder="@Localizer["Correo"]" required />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Clave" class="form-label">@Localizer["Clave"]</label>
                                <input class="form-control" type="password" id="Clave" asp-for="Clave" placeholder="@Localizer["Clave"]" required />
                                <span asp-validation-for="Clave" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="ClaveRepetida" class="form-label">@Localizer["RepiteClave"]</label>
                                <input class="form-control" type="password" id="ClaveRepetida" name="ClaveRepetida" placeholder="@Localizer["RepiteClave"]" required />
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">@Localizer["Registrarse"]</button>
                            </div>
                            @if (!string.IsNullOrEmpty(ViewData["Mensaje"] as string))
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            }
                            <div class="text-center">
                                @Localizer["YaCuenta"] <a href="@Url.Action("IniciarSesion","Login")">@Localizer["IniciarSesion"]</a>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("Index", "MainPage")" class="btn btn-secondary">@Localizer["Volver"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
