<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Localizer["Title"]</title>
    <link rel="icon" type="image/png" href="~/src/img/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinalDAMAgil.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        body {
            padding-top: 4.5rem; /* Altura del navbar */
        }

        .navbar-brand img {
            margin-right: 0.5rem;
        }

        .nav-link .bi {
            margin-right: 0.5rem;
        }

        .footer-links a {
            text-decoration: none;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 2rem 0;
        }

            .footer h5 {
                margin-bottom: 1rem;
            }

        .footer-links li {
            margin-bottom: 0.5rem;
        }

        .footer .social-icons a {
            margin: 0 0.5rem;
            color: #343a40;
        }

        @@media (max-width: 767px) {
            .navbar-brand {
                display: flex;
                align-items: center;
            }
        }

        @@media (max-width: 575px) {
            .navbar-brand img {
                width: 24px;
                height: 24px;
            }

            .footer h5, .footer p {
                text-align: center;
            }

            .footer .social-icons {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm fixed-top animate__animated animate__fadeInDown">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="MainPage" asp-action="Index">
                    <img src="~/src/img/logo.png" alt="GestaCentro" width="30" height="30" class="d-inline-block align-text-top">
                    GestaCentro
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.RouteValues["Action"].ToString() == "Index" ? "active animate__animated animate__bounce" : "")" asp-area="" asp-controller="MainPage" asp-action="Index">
                                <i class="bi bi-house-door"></i>@Localizer["Home"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.RouteValues["Action"].ToString() == "AboutUs" ? "active animate__animated animate__bounce" : "")" asp-area="" asp-controller="MainPage" asp-action="AboutUs">
                                <i class="bi bi-info-circle"></i>@Localizer["AcercaDe"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.RouteValues["Action"].ToString() == "Contacto" ? "active animate__animated animate__bounce" : "")" asp-area="" asp-controller="MainPage" asp-action="Contacto">
                                <i class="bi bi-envelope"></i>@Localizer["Contacto"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.RouteValues["Action"].ToString() == "Privacy" ? "active animate__animated animate__bounce" : "")" asp-area="page" asp-controller="MainPage" asp-action="Privacy">
                                <i class="bi bi-shield-lock"></i>@Localizer["Privacy"]
                            </a>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="btn btn-primary animate__animated animate__pulse" asp-area="" asp-controller="Login" asp-action="IniciarSesion">
                                <i class="bi bi-box-arrow-in-right"></i> @Localizer["Acceder"]
                            </a>
                        </li>
                        <!-- Botón para cambiar idioma -->
                        <li class="nav-item ms-3">
                            <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#languageModal">
                                <i class="bi bi-translate"></i> @Localizer["Idioma"]
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3 animate__animated animate__fadeIn">
            @RenderBody()
        </main>
    </div>
    <footer class="footer mt-auto animate__animated animate__fadeInUp">
        <div class="container text-center">
            <div class="row">
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                    <h5 class="text-uppercase">GestaCentro</h5>
                    <p>
                        @Localizer["FooterDescripcion"]
                    </p>
                </div>
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                    <h5 class="text-uppercase">@Localizer["Enlaces"]</h5>
                    <ul class="list-unstyled mb-0 footer-links animate__animated animate__fadeInUp">
                        <li>
                            <a href="#!" class="text-dark">@Localizer["AcercaDe"]</a>
                        </li>
                        <li>
                            <a href="#!" class="text-dark">@Localizer["Soporte"]</a>
                        </li>
                        <li>
                            <a href="#!" class="text-dark">@Localizer["Contacto"]</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-dark">@Localizer["Privacy"]</a>
                        </li>
                    </ul>

                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <div class="social-icons">
                        <a href="#!" class="text-dark"><i class="bi bi-facebook"></i></a>
                        <a href="#!" class="text-dark"><i class="bi bi-twitter"></i></a>
                        <a href="#!" class="text-dark"><i class="bi bi-instagram"></i></a>
                        <a href="#!" class="text-dark"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                &copy; 2024 - GestaCentro
            </div>
        </div>
    </footer>

    <!-- Language Selection Modal -->
    <div class="modal fade" id="languageModal" tabindex="-1" aria-labelledby="languageModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="languageModalLabel">@Localizer["SeleccionarIdioma"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ul class="list-unstyled">
                        <li><a href="#" onclick="setLanguage('es')" class="btn btn-link">@Localizer["Español"]</a></li>
                        <li><a href="#" onclick="setLanguage('en')" class="btn btn-link">@Localizer["English"]</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Cambiar idioma
        function setLanguage(culture) {
            fetch(`/Language/SetLanguage?culture=${culture}&returnUrl=${window.location.pathname}`)
                .then(() => {
                    window.location.reload();
                });
        }
    </script>
</body>
</html>
