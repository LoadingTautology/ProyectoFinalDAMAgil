<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GestaCentro</title>
    <link rel="icon" type="image/png" href="~/src/img/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinalDAMAgil.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <style>
        body {
            padding-top: 4.5rem; /* Altura del navbar */
        }

        .navbar-brand img {
            margin-right: 0.5rem;
        }

        .nav-link .bi {
            margin-right: 0.5rem;
        }

        .footer-links a {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="MainPage" asp-action="Index">
                    <img src="~/src/img/logo.png" alt="GestaCentro" width="30" height="30" class="d-inline-block align-text-top">
                    GestaCentro
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-area="" asp-controller="MainPage" asp-action="Index">
                                <i class="bi bi-house-door"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-area="" asp-controller="MainPage" asp-action="AboutUs">
                                <i class="bi bi-info-circle"></i>Acerca de
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-area="" asp-controller="MainPage" asp-action="Contacto">
                                <i class="bi bi-envelope"></i>Contacto
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="page" asp-controller="MainPage" asp-action="Privacy">
                                <i class="bi bi-shield-lock"></i>Privacy
                            </a>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="btn btn-primary" asp-area="" asp-controller="Login" asp-action="IniciarSesion">
                                <i class="bi bi-box-arrow-in-right"></i> Acceder
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-center text-lg-start mt-auto py-3">
        <div class="container text-center py-3">
            <div class="row">
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                    <h5 class="text-uppercase">GestaCentro</h5>
                    <p>
                        Herramienta de gestión integral para centros educativos.
                    </p>
                </div>
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Enlaces</h5>
                    <ul class="list-unstyled mb-0 footer-links">
                        <li>
                            <a href="#!" class="text-dark">Acerca de</a>
                        </li>
                        <li>
                            <a href="#!" class="text-dark">Soporte</a>
                        </li>
                        <li>
                            <a href="#!" class="text-dark">Contacto</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-dark">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                &copy; 2024 - GestaCentro
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
