<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GestaCentro - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinalDAMAgil.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <style>
        /* Estilos personalizados para la barra lateral */
        #sidebar {
            height: 100vh;
            position: fixed;
            top: 56px; /* Altura de la barra de navegación */
            left: 0;
            width: 250px;
            transition: width 0.3s;
            overflow-x: hidden;
            z-index: 1000;
        }

            #sidebar.collapsed {
                width: 80px;
            }

            #sidebar .nav-link {
                white-space: nowrap;
                text-overflow: ellipsis;
                overflow: hidden;
            }

            #sidebar.collapsed .nav-link {
                text-align: center;
            }

                #sidebar.collapsed .nav-link span {
                    display: none;
                }

        #content {
            margin-left: 250px;
            transition: margin-left 0.3s;
            padding-top: 56px; /* Altura de la barra de navegación */
        }

            #content.collapsed {
                margin-left: 80px;
            }

        .navbar {
            z-index: 1050; /* Asegura que la barra de navegación esté sobre la barra lateral */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GestaCentro</a>
                <div class="d-flex">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person me-2"></i>
                            @User.Identity.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                            <li>
                                <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Settings">
                                    <i class="bi bi-gear me-2"></i>Configuración
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="CerrarSesion">
                                    <i class="bi bi-box-arrow-right me-2"></i>Cerrar sesión
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div id="sidebar" class="bg-light border-right">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="toggleSidebar()">
                    <i class="bi bi-list"></i> <span>Esconder</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> <span>Home</span>
                </a>
            </li>
            @if (User.IsInRole("ADMINISTRADOR"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="ListarCentro">
                        <i class="bi bi-building"></i> <span>Centro</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="" asp-action="">
                        <i class="bi bi-person"></i> <span>Profesores</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="" asp-action="">
                        <i class="bi bi-people"></i> <span>Alumnos</span>
                    </a>
                </li>
            }
        </ul>
    </div>

    <div id="content">
        <main role="main" class="container pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ProyectoFinalDAMAgil - Todos los derechos reservados.
            <div class="float-end">
                <a href="mailto:soporte@gestacentro.com">Contacto</a> | <a href="https://www.gestacentro.com/terminos">Términos de Servicio</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Alternar la barra lateral y guardar el estado en localStorage
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            var content = document.getElementById('content');
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
            localStorage.setItem('sidebar-collapsed', sidebar.classList.contains('collapsed'));
        }

        // Cargar el estado de la barra lateral desde localStorage
        window.addEventListener('DOMContentLoaded', (event) => {
            if (localStorage.getItem('sidebar-collapsed') === 'true') {
                document.getElementById('sidebar').classList.add('collapsed');
                document.getElementById('content').classList.add('collapsed');
            }
        });
    </script>
</body>
</html>
