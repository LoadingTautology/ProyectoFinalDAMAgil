@{
    ViewData["Title"] = "Horario";
    int contador = 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            font-family: Arial, sans-serif;
        }

        th, td {
            border: 1px solid black;
            padding: 1px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Horario</h2>



    <table>
        <thead>
            <tr>
                <th>Hora/Día</th>
                @foreach (var dia in (IEnumerable<string>)ViewData["DiasSemana"])
                {
                    <th>@dia</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var hora in (IEnumerable<string>)ViewData["Horas"])
            {
                <tr>
                    <td>@hora</td>
                    @foreach (var dia in (IEnumerable<string>)ViewData["DiasSemana"])
                    {
                        contador++;
                        @if (contador==45 || contador==52 || contador==59 || contador==66)
                        {
                            <td> </td>
                        }else
                        {
                            <td>
                                <a asp-controller="Admin" asp-action="ListarHorarios" asp-route-id="@contador" class="btn btn-warning btn-sm">
                                    <i class="bi bi-arrow-left"></i> @contador
                                </a>

                            </td> <!-- Aquí puedes poner el contenido del horario, por ejemplo, una clase, evento, etc. -->
                        }

                    }
                </tr>
            }
        </tbody>
    </table>
</body>
</html>


