@model ProyectoFinalDAMAgil.Models.Admin.HorarioModel
@{
    ViewData["Title"] = "Horario";
    List<ProyectoFinalDAMAgil.Models.Admin.HorarioModel> listaHorarioEstudio = (List<ProyectoFinalDAMAgil.Models.Admin.HorarioModel>)ViewData["Horarios"];
    List<ProyectoFinalDAMAgil.Models.Admin.AsignaturaModel> listaAsignaturas = (List<ProyectoFinalDAMAgil.Models.Admin.AsignaturaModel>)ViewData["ListaAsignaturas"];
    List<ProyectoFinalDAMAgil.Models.Admin.AulaModel> listaAulas = (List<ProyectoFinalDAMAgil.Models.Admin.AulaModel>)ViewData["ListaAulas"];


    int contador = 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            font-family: Arial, sans-serif;
        }

        th, td {
            border: 1px solid black;
            padding: 1px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Horario</h3>
            </div>
            <div class="card-body">

                <form asp-controller="Admin" asp-action="GuardarHorario" asp-route-id="@ViewData["idAsignatura"]" asp-route-idEstudios="@ViewData["idEstudios"]" method="post">

                    <input type="hidden" name="idAsignatura" value="@ViewData["idAsignatura"]" />
                    <input type="hidden" name="idEstudio" value="@ViewData["idEstudios"]" />


                    <div class="d-flex justify-content-between mb-3">

                        <select asp-for="IdAula">
                            @foreach (var item in listaAulas)
                            {
                                <option value="@item.IdAula"> @item.NumeroAula - @item.NombreAula</option>
                            }
                        </select>

                        <input type="color" asp-for="ColorAsignatura"></input>

                        <a asp-controller="Admin" asp-action="ListarAsignaturas" asp-route-id="@ViewData["idEstudios"]" class="btn btn-warning mb-3">
                            <i class="bi bi-arrow-left"></i> Volver a Asignaturas
                        </a>
                    </div>


                    <table>
                        <thead>
                            <tr>
                                <th>Hora/Día</th>
                                @foreach (var dia in (IEnumerable<ProyectoFinalDAMAgil.Models.Admin.DiasemanaModel>)ViewData["DiasSemana"])
                                {
                                    <th>@dia.DiaDeLaSemana</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var hora in (IEnumerable<ProyectoFinalDAMAgil.Models.Admin.FranjahorariumModel>)ViewData["Horas"])
                            {
                                <tr>
                                    <td>@hora.HoraMinInicio - @hora.HoraMinFinal</td>
                                    @foreach (var dia in (IEnumerable<ProyectoFinalDAMAgil.Models.Admin.DiasemanaModel>)ViewData["DiasSemana"])
                                    {
                                        contador++;
                                        if (listaHorarioEstudio.Exists(horario => horario.IdDiaFranja==contador && horario.IdAsignatura!=(int)ViewData["idAsignatura"]))
                                        {
                                            string colorAsignatura = @listaHorarioEstudio.Find(horario => horario.IdDiaFranja == contador).ColorAsignatura;
                                            string nombreAsignatura = @listaAsignaturas.Find(asignatura => asignatura.IdAsignatura == listaHorarioEstudio.Find(horario => horario.IdDiaFranja == contador).IdAsignatura).NombreAsignatura;
                                            int idAula = @listaHorarioEstudio.Find(horario => horario.IdDiaFranja == contador).IdAula;
                                            int numeroAula = listaAulas.Find(aula => aula.IdAula == idAula).NumeroAula;

                                            <td style="background-color:@colorAsignatura;">
                                                @numeroAula - @nombreAsignatura @* @listaAsignaturas.Find(asignatura => asignatura.IdAsignatura == listaHorarioEstudio.Find(horario => horario.IdDiaFranja==contador).IdAsignatura).NombreAsignatura *@
                                            </td>
                                        }
                                        else if (listaHorarioEstudio.Exists(horario => horario.IdDiaFranja==contador && horario.IdAsignatura==(int)ViewData["idAsignatura"]))
                                        {
                                            string colorAsignatura = @listaHorarioEstudio.Find(horario => horario.IdDiaFranja == contador).ColorAsignatura;
                                            string nombreAsignatura = @listaAsignaturas.Find(asignatura => asignatura.IdAsignatura == listaHorarioEstudio.Find(horario => horario.IdDiaFranja == contador).IdAsignatura).NombreAsignatura;
                                            int idAula = @listaHorarioEstudio.Find(horario => horario.IdDiaFranja == contador).IdAula;
                                            int numeroAula = listaAulas.Find(aula => aula.IdAula == idAula).NumeroAula;

                                            <td >

                                                <button type="submit" class="btn" name="IdDiaFranja" value="@contador" style="background-color:@colorAsignatura;">
                                                    <i class="bi bi-save"></i> @numeroAula - @nombreAsignatura
          
                                                </button>
                                            </td>

                                        }

                                        else
                                        {
                                            <td>
                                                
                                                <button type="submit" class="btn btn-warning btn-sm" name="IdDiaFranja" value="@contador">
                                                    <i class="bi bi-save"></i> @contador
                                                </button>

                                            </td> 
                                        }

                                    }
                                </tr>
                            }
                        </tbody>
                    </table>



                </form>



            </div>
        </div>
    </div>
</body>
</html>






    




