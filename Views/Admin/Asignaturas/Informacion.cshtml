<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            font-family: Arial, sans-serif;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
    <script>
        window.onload = function () {
            const table = document.querySelector('table');
            table.addEventListener('click', function (event) {
                const cell = event.target;
                if (cell.tagName === 'TD' && cell.cellIndex > 0) { // Ignorar clics en la primera columna
                    const row = cell.parentElement;
                    const time = row.children[0].textContent;
                    const dayIndex = cell.cellIndex;
                    const days = ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes'];
                    const day = days[dayIndex - 1]; // Ajustando para la primera columna siendo horas
                    console.log(`Día: ${day}, Hora: ${time}`);
                    if (cell.style.backgroundColor === 'blue') {
                        cell.style.backgroundColor = ''; // Restablecer al color original
                    } else {
                        cell.style.backgroundColor = 'blue'; // Cambiar color de fondo a azul
                    }
                }
            });
        }
    </script>
</head>
