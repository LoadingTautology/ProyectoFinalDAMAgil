@model List<ProyectoFinalDAMAgil.Models.Admin.AsignaturaModel>

@{
    ViewData["Title"] = "Añadir";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Información</h3>
        </div>
        <div class="card-body">
            <a asp-controller="Admin" asp-action="ListarAsignaturas" asp-route-id="@ViewData["idEstudios"]" class="btn btn-warning mb-3">
                <i class="bi bi-arrow-left"></i> Volver a estudios
            </a>
        </div>
        <table id="centrosTable" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Nombre Asignatura</th>
                    <th>Curso</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NombreAsignatura</td>
                            <td>@item.Curso</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Acciones">
                                    <a asp-controller="Admin" asp-action="GuardarAsignaturaExistente" asp-route-id="@item.IdAsignatura" asp-route-idEstudios="@ViewData["idEstudios"]" class="btn btn-primary btn-sm">
                                        <i class="bi bi-gear"></i> Seleccionar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No hay asignaturas</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
