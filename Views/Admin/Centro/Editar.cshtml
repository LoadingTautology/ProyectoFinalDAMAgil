@model ProyectoFinalDAMAgil.Scaffold.Centroeducativo
﻿@{
    ViewData["Title"] = "Centro Educativo Editar";
}


<div class="card">

    <div class="card-header">
        Editar Contacto
    </div>

    <div class="card-body">
        <form asp-controller="Admin" asp-action="EditarCentro" method="post">

            <div class="mb-3">
                <label class="form-label">Nombre Centro</label>
                <input asp-for="NombreCentro" type="text" class="form-control">
                <span asp-validation-for="NombreCentro" class="text-danger"></span>
             </div>
             <div class="mb-3">
                <label class="form-label">Direccion Centro</label>
                <input asp-for="Direccion" type="text" class="form-control">
                <span asp-validation-for="Direccion" class="text-danger"></span>
             </div>

             <button type="submit" class="btn btn-primary">Guardar</button>

             <a asp-controller="Admin"asp-action="ListarCentro" class="btn btn-warning">Volver a la lista</a>

        </form>
    </div>

</div>
