@model ProyectoFinalDAMAgil.Models.Admin.CentroEducativoModel

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="card">
    <div class="card-header">
        <h3>@Localizer["CrearCentroNuevo"]</h3>
    </div>
    <div class="card-body">
        <form asp-controller="Admin" asp-action="GuardarCentro" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="NombreCentro" class="form-label">@Localizer["NombreCentro"]</label>
                <input asp-for="NombreCentro" type="text" class="form-control" id="NombreCentro" placeholder="@Localizer["NombreCentroPlaceholder"]" required>
                <span asp-validation-for="NombreCentro" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DireccionCentro" class="form-label">@Localizer["DireccionCentro"]</label>
                <input asp-for="DireccionCentro" type="text" class="form-control" id="DireccionCentro" placeholder="@Localizer["DireccionCentroPlaceholder"]" required>
                <span asp-validation-for="DireccionCentro" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> @Localizer["Guardar"]
                </button>
                <a asp-controller="Admin" asp-action="ListarCentro" class="btn btn-warning">
                    <i class="bi bi-arrow-left"></i> @Localizer["VolverALista"]
                </a>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(ViewData["Mensaje"] as string))
        {
            <div class="alert alert-danger mt-3" role="alert">
                @{
                    string vartempmensaje = ViewData["Mensaje"] as string;
                }

                @Localizer[vartempmensaje]

            </div>
        }
    </div>
</div>
