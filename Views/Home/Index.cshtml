@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>@Localizer["Bienvenido"]</h2>
            <p class="lead">@Localizer["Plataforma"]</p>
        </div>
    </div>

    <div class="row mt-4">
        @if (User.IsInRole("ADMINISTRADOR"))
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-building display-4 mb-3"></i>
                        <h5 class="card-title">@Localizer["GestionCentros"]</h5>
                        <p class="card-text">@Localizer["AdminCentros"]</p>
                        <a href="@Url.Action("ListarCentro", "Admin")" class="btn btn-primary">@Localizer["IrCentros"]</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-person display-4 mb-3"></i>
                        <h5 class="card-title">@Localizer["GestionProfesores"]</h5>
                        <p class="card-text">@Localizer["AdminProfesores"]</p>
                        <a href="@Url.Action("Index", "Profesores")" class="btn btn-primary">@Localizer["IrProfesores"]</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 mb-3"></i>
                        <h5 class="card-title">@Localizer["GestionAlumnos"]</h5>
                        <p class="card-text">@Localizer["AdminAlumnos"]</p>
                        <a href="@Url.Action("Index", "Alumnos")" class="btn btn-primary">@Localizer["IrAlumnos"]</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar display-4 mb-3"></i>
                        <h5 class="card-title">@Localizer["Clases"]</h5>
                        <p class="card-text">@Localizer["VerClases"]</p>
                        <a href="@Url.Action("Clases", "Estudiante")" class="btn btn-primary">@Localizer["IrClases"]</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-journal-check display-4 mb-3"></i>
                        <h5 class="card-title">@Localizer["Examenes"]</h5>
                        <p class="card-text">@Localizer["VerExamenes"]</p>
                        <a href="@Url.Action("Examenes", "Estudiante")" class="btn btn-primary">@Localizer["IrExamenes"]</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-file-earmark-text display-4 mb-3"></i>
                        <h5 class="card-title">@Localizer["Notas"]</h5>
                        <p class="card-text">@Localizer["VerNotas"]</p>
                        <a href="@Url.Action("Notas", "Estudiante")" class="btn btn-primary">@Localizer["IrNotas"]</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
