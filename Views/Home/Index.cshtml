@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Bienvenido a GestaCentro</h2>
            <p class="lead">Su plataforma de gestión de centros educativos.</p>
        </div>
    </div>

    <div class="row mt-4">
        @if (User.IsInRole("ADMINISTRADOR"))
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-building display-4 mb-3"></i>
                        <h5 class="card-title">Gestión de Centros</h5>
                        <p class="card-text">Administrar y gestionar los centros educativos.</p>
                        <a href="@Url.Action("ListarCentro", "Admin")" class="btn btn-primary">Ir a Centros</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-person display-4 mb-3"></i>
                        <h5 class="card-title">Gestión de Profesores</h5>
                        <p class="card-text">Administrar y gestionar los profesores.</p>
                        <a href="@Url.Action("Index", "Profesores")" class="btn btn-primary">Ir a Profesores</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 mb-3"></i>
                        <h5 class="card-title">Gestión de Alumnos</h5>
                        <p class="card-text">Administrar y gestionar los alumnos.</p>
                        <a href="@Url.Action("Index", "Alumnos")" class="btn btn-primary">Ir a Alumnos</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar display-4 mb-3"></i>
                        <h5 class="card-title">Clases</h5>
                        <p class="card-text">Ver el horario y las clases asignadas.</p>
                        <a href="@Url.Action("Clases", "Estudiante")" class="btn btn-primary">Ver Clases</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-journal-check display-4 mb-3"></i>
                        <h5 class="card-title">Exámenes</h5>
                        <p class="card-text">Ver fechas y resultados de exámenes.</p>
                        <a href="@Url.Action("Examenes", "Estudiante")" class="btn btn-primary">Ver Exámenes</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-file-earmark-text display-4 mb-3"></i>
                        <h5 class="card-title">Notas</h5>
                        <p class="card-text">Ver las notas obtenidas en las diferentes asignaturas.</p>
                        <a href="@Url.Action("Notas", "Estudiante")" class="btn btn-primary">Ver Notas</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
