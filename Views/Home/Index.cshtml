@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>@Localizer["Bienvenido"]</h2>
            <p class="lead">@Localizer["Plataforma"]</p>
        </div>
    </div>

    <div class="row mt-4">
        @if (User.IsInRole("ADMINISTRADOR"))
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-building display-4 mb-3"></i>
                        <h5 class="card-title">@Localizer["GestionCentros"]</h5>
                        <p class="card-text">@Localizer["AdminCentros"]</p>
                        <a href="@Url.Action("ListarCentro", "Admin")" class="btn btn-primary">@Localizer["IrCentros"]</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-person display-4 mb-3"></i>
                        <h5 class="card-title">@Localizer["GestionProfesores"]</h5>
                        <p class="card-text">@Localizer["AdminProfesores"]</p>
                        <a href="@Url.Action("ListarCentroProfesores", "Admin")" class="btn btn-primary">@Localizer["IrProfesores"]</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 mb-3"></i>
                        <h5 class="card-title">@Localizer["GestionAlumnos"]</h5>
                        <p class="card-text">@Localizer["AdminAlumnos"]</p>
                        <a href="@Url.Action("ListarCentroAlumnos", "Admin")" class="btn btn-primary">@Localizer["IrAlumnos"]</a>
                    </div>
                </div>
            </div>
        }
        else if (User.IsInRole("PROFESOR"))
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar display-4 mb-3"></i>
                        <h5 class="card-title">Listar Asignaturas</h5>
                        <p class="card-text">Listar Asignaturas</p>
                        <a href="@Url.Action("ListarAsignaturasEstudiosProfesor", "Profesor")" class="btn btn-primary">Listar Asignaturas</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-journal-check display-4 mb-3"></i>
                        <h5 class="card-title">Horario</h5>
                        <p class="card-text">Horario</p>
                        <a href="@Url.Action("MostrarHorarioProfesor", "Profesor")" class="btn btn-primary">Horario</a>
                    </div>
                </div>
            </div>            
        }
        else if (User.IsInRole("ALUMNO"))
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar display-4 mb-3"></i>
                        <h5 class="card-title">Listar Asignaturas</h5>
                        <p class="card-text">Listar Asignaturas</p>
                        <a href="@Url.Action("ListarAsignaturasEstudiosAlumno", "Alumno")" class="btn btn-primary">Asignaturas</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-journal-check display-4 mb-3"></i>
                        <h5 class="card-title">Horario</h5>
                        <p class="card-text">Horario</p>
                        <a href="@Url.Action("MostrarHorarioAlumno", "Alumno")" class="btn btn-primary">Horario</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
