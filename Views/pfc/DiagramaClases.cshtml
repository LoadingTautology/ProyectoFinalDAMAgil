@page
@{
    Layout = null;
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    #svg-container {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        #svg-container svg {
            max-width: 100%;
            max-height: 100%;
        }
</style>
<p>Para hacer zoom abrir la imagen en una nueva pestaña</p>
<div id="svg-container">
    <img id="svg-image" src="~/src/img/pfc/ClassDiagram.svg" alt="Class Diagram" />
</div>

<script src="https://unpkg.com/@@panzoom/panzoom@9.4.1/dist/panzoom.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const svgImage = document.getElementById('svg-image');
        const panzoomInstance = Panzoom(svgImage, {
            contain: 'outside',
            startScale: 1,
            minScale: 0.5,
            maxScale: 5
        });
        svgImage.parentElement.addEventListener('wheel', panzoomInstance.zoomWithWheel);
    });
</script>
