@page
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Navigation</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <style>
        .instruction-icons {
            font-size: 1.5rem;
            vertical-align: middle;
        }
    </style>
</head>
<body class="d-flex flex-column justify-content-center align-items-center vh-100">
    <div class="container text-center mb-4">
        <h1 class="mb-4">Navegar por las Imágenes SVG</h1>
        <p><i class="bi bi-shift"></i> Shift + arrastrar el ratón para moverse</p>
        <p><span class="instruction-icons">&#8963;</span> <i class="bi bi-command"></i> Control/command + rueda del ratón para hacer zoom in y zoom out</p>
    </div>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-4 mb-3">
                <button class="btn btn-primary btn-block" onclick="window.open('@Url.Content("~/src/img/pfc/AdminController.svg")', '_blank')">Admin Controller</button>
            </div>
            <div class="col-md-4 mb-3">
                <button class="btn btn-primary btn-block" onclick="window.open('@Url.Content("~/src/img/pfc/HomeController.svg")', '_blank')">Home Controller</button>
            </div>
            <div class="col-md-4 mb-3">
                <button class="btn btn-primary btn-block" onclick="window.open('@Url.Content("~/src/img/pfc/LanguageController.svg")', '_blank')">Language Controller</button>
            </div>
            <div class="col-md-4 mb-3">
                <button class="btn btn-primary btn-block" onclick="window.open('@Url.Content("~/src/img/pfc/LoginController.svg")', '_blank')">Login Controller</button>
            </div>
            <div class="col-md-4 mb-3">
                <button class="btn btn-primary btn-block" onclick="window.open('@Url.Content("~/src/img/pfc/MainPageController.svg")', '_blank')">Main Page Controller</button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
